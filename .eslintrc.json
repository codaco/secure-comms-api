{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "spread": true,
            "object-shorthand": ["error", "always"]
        },
        "sourceType": "module"
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "no-mixed-operators": [1, {"allowSamePrecedence": true}]
    }
}
